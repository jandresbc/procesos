<form method="post" action="{{ path('usuarios_delete', {'idUsuario': usuario.idUsuario}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.idUsuario) }}">
    <button class="btn">Delete</button>
</form>
